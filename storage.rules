rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to config files for authenticated users
    match /config/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only allow writes through admin/CI
    }
    
    // Allow read access to public assets
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Default rule - deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 